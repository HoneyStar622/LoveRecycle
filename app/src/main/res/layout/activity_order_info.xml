<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".ui.OrderInfoActivity">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/titlebar_order_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleMargin="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        android:background="?attr/colorPrimary">
        <TextView
            android:id="@+id/tv_toolbar_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:singleLine="true"
            android:textColor="#505050"
            android:text="居中显示居中显示" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_order_activity_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:id="@+id/order_activity_img"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:riv_border_color="@color/xui_config_color_gray_6"
            app:riv_border_width="1px"
            app:riv_is_circle="true"
            app:riv_selected_border_color="@color/xui_config_color_gray_4"
            app:riv_selected_border_width="1px"
            app:riv_selected_mask_color="@color/xui_config_color_gray_8" />

        <LinearLayout
            android:id="@+id/ll_order_activity_info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_activity_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="所属活动简介:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_order_activity_info_content"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="25dp"
                android:gravity="left"
                android:maxLines="15"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:background="@drawable/textview_border"
                android:text="  活动内容这是一个长测试这是一个长测试这是一个长测试这是一个长测试这是一个长测试这是一个长测试这是一个长测试这是一个长测试"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_activity_club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="活动举办社团:"
            android:textSize="16dp" />

        <com.example.loverecycle.ui.AlwaysMarqueeTextView
            android:id="@+id/tv_order_activity_club_content"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"
            android:textSize="16dp"
            android:background="@drawable/textview_border"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_activity_club"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="这是一个长测试，这是一个长测试，这是一个长测试     ，这是一个长测试"
            />
        <TextView
            android:id="@+id/tv_order_activity_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="回收日期：2018-09-01"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_order_activity_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_activity_date"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="回收地点：2019-07-02"
            android:textSize="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="fill_parent"
        android:layout_height="1.5px"
        android:background="?android:attr/listDivider" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_info_category"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:maxLines="1"
            android:text="物品类别"
            android:textSize="16dp" />

        <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
            android:id="@+id/s_info_category"
            style="@style/Material.SpinnerStyle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="40dp"
            android:layout_marginTop="18dp"
            android:textSize="16dp"
            app:ms_entries="@array/category_value" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_info_photo_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_order_info_category"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:overScrollMode="never"/>

        <EditText
            android:id="@+id/et_order_info_info"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="35dp"
            android:gravity="left"
            android:maxLines="10"
            android:hint="请描述你的回收物品"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rc_info_photo_select"
            android:scrollbars="vertical"
            android:text=""
            android:imeOptions="flagNoExtractUi"
            android:singleLine="false"
            android:background="@drawable/textview_border"
            android:textSize="16dp" />

        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            style="@style/RoundButton.Auto"
            android:id="@+id/btn_order_info_commit"
            android:layout_height="40dp"
            android:layout_width="200dp"
            app:rb_borderColor="@color/xui_round_btn"
            android:textColor="#505050"
            android:layout_marginTop="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_order_info_info"
            android:enabled="true"
            android:text="修改订单" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>